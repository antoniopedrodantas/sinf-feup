{
  "name": "tempura-server",
  "version": "1.0.0",
  "main": "main.ts",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.9",
    "express": "^4.17.1",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/main.ts",
    "start:watch": "nodemon",
    "build": "tsc"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  }
}
