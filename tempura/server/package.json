{
  "name": "tempura-server",
  "version": "1.0.0",
  "main": "main.ts",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.9",
    "@types/validator": "^13.1.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.0",
    "ts-node": "^9.0.0",
    "typeorm": "^0.2.29",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/main.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "migration:run": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:revert": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert",
    "migration:db" : "rm -f ./database/tempura.db && touch ./database/tempura.db"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  }
}
