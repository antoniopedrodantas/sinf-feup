{
  "name": "tempura-server",
  "version": "1.0.0",
  "main": "main.ts",
  "license": "UNLICENSED",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.14.9",
    "@types/validator": "^13.1.0",
    "@types/yamljs": "^0.2.31",
    "nodemon": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.0",
    "swagger-ui-express": "^4.1.5",
    "ts-node": "^9.0.0",
    "typeorm": "^0.2.29",
    "typescript": "^4.1.2",
    "validate-with-xmllint": "^1.2.0",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/main.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "migration:run": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:revert": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert",
    "migration:db": "rm -f ./database/tempura.db && touch ./database/tempura.db"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  }
}
